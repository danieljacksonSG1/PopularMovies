<?xml version="1.0" encoding="utf-8"?>
<manifest package="wsit.com.au.popularmovies"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.DetailsActivity">
        </activity>
        <activity android:name=".ui.SettingsActivity">
        </activity>
        <activity
            android:name=".ui.MovieListActivity"
            android:label="@string/title_movie_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.MovieDetailActivity"
            android:label="@string/title_movie_detail"
            android:parentActivityName=".ui.MovieListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wsit.com.au.popularmovies.ui.MovieListActivity"/>
        </activity>
    </application>

</manifest>
