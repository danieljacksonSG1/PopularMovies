<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:background="@android:color/black"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rLayout"
    tools:context="wsit.com.au.popularmovies.ui.DetailsActivity">



    <ImageView
        android:scaleType="fitCenter"
        android:src="@drawable/spectre"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/detailsImageView" />

    <TextView
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Spectre"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/originalTitle" />

    <TextView
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:id="@+id/releaseDate"

        />


    <TextView
            android:text="A cryptic message from Bondâ€™s past sends him on a trail to uncover a sinister organization. While M battles political forces to keep the secret service alive, Bond peels back the layers of deceit to reveal the terrible truth behind SPECTRE."
            android:id="@+id/overViewTextView"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            style="@style/detailsViewText" />

    <ListView
        android:id="@+id/trailersListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0">
    </ListView>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="7"
        android:id="@+id/voteAverageTextView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />


</LinearLayout>


</ScrollView>
