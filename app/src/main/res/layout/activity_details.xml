<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="wsit.com.au.popularmovies.DetailsActivity">




    <ImageView
        android:scaleType="fitCenter"
        android:src="@drawable/spectre"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/detailsImageView"

         />

    <TextView
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Spectre"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/originalTitle"
        android:layout_below="@+id/detailsImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:id="@+id/releaseDate"
        android:layout_below="@+id/originalTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsRatingBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:stepSize="0.5"
        android:clickable="false"

        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="7"
        android:id="@+id/voteAverageTextView"
        android:layout_above="@+id/detailsRatingBar"
        android:layout_centerHorizontal="true" />



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/releaseDate"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/voteAverageTextView">

        <TextView
            android:text="A cryptic message from Bondâ€™s past sends him on a trail to uncover a sinister organization. While M battles political forces to keep the secret service alive, Bond peels back the layers of deceit to reveal the terrible truth behind SPECTRE."
            android:id="@+id/overViewTextView"
            style="@style/detailsViewText"
          />
    </ScrollView>


</RelativeLayout>
